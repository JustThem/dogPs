/**index.wxss**/

page {
  background: #f8f8f8;
}

.background {
  width: 100%;
  height: 70vh;
  /* margin-top: 10px; */
}

.fil-back {
  filter: contrast(10);
}

.fil-boss {
  filter: blur(5px);
}

.boss {
  margin: 0;
  height: 70vh;
  width: 100vw;
  /* background-color: #E7685F; */
  background-color: #fff;
  position: relative;
  /* display: flex;
  justify-content: space-between;
  align-items: center; */
}

.boss view {
  width: 47vw;
  height: 220px;

  /* background-color: blue; */
  margin: 10px auto;
  border-radius: 10px;
}

.boss view:nth-of-type(1) {
  background-color: #438EDB;
  position: absolute;
  top: 40px;
  /* left: calc((100% - 200px) / 2); */
  /* left: 10px; */
  right:5px;
}

.boss view:nth-of-type(2) {
  /* background-color: red; */
  /* background: url('') no-repeat;
  background-size: 100% 100%; */
  position: absolute;
  /* bottom: 50px; */
  top: 40px;
  /* left: calc((100% - 200px) / 2); */
  left: 5px;
}
.img{
  width: 100%;
  height: 100%;
  border-radius: 10px;
}

.one {
  /* background-color: red; */
  animation: right 3s 1 forwards;
}

@keyframes right {
  0% {
    right: 5px;
    width: 55vw;
    height: 240px;
  }

  100% {
    width: 70vw;
    height: 50vh;
    right: calc((100% - 70vw) / 2);
  }
}

.two {

  /* background-color: blue; */
  animation: left 3s 1 forwards;
}

@keyframes left {
  0% {
    left: 5px;
    width: 55vw;
    height: 240px;
  }

  100% {
    width: 70vw;
    height: 50vh;
    left: calc((100% - 70vw) / 2);
  }
}

.isNot {
  opacity: 0;
  position: absolute;
  left: calc((100% - 47vw) / 2);
  /* top: calc((100% - 200px) / 2); */
  top: 40px;
}

.three {
  position: absolute;
  left: calc((100% - 47vw) / 2);
  background-color: #438EDB;
  /* top: calc((100% - 220px) / 2); */
  top: 40px;
  z-index: 99999;
  opacity: 0;
  animation: wcenter 4s 1 forwards;
}

@keyframes wcenter {
  0% {
    opacity: 0.1;
  }

  10% {
    opacity: 0.2;
    width: 55vw;
    height: 240px;
    left: calc((100% - 55vw) / 2);
  }

  60% {
    opacity: 0.7;
  }

  100% {
    opacity: 1;
    width: 70vw;
    height: 50vh;
    left: calc((100% - 70vw) / 2);
  }
}

.show {
  position: fixed;
  width: 70vw;
  height: 50vh;
  /* background-color: #000; */
  left: calc((100% - 70vw) / 2);
  /* top: calc((100% - 200px) / 2); */
  top: 46px;
  border-radius: 10px;
  animation: show 2s 1 forwards;
}

@keyframes show {
  0% {
    opacity: 0.3;
  }

  100% {
    opacity: 1;
  }
}
.but{
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 20vh;
}
button{
  height: 40px;
  line-height: 40px;
  font-size: 15px;
}
.on-ing{
  background-color: #E7685F;
  width: 80%;
  margin: 0 auto;
  color: #fff;
}
.buted{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.buted button{
  width: 35%;
  margin:0;
  background-color: #F3A43D;
  color: #fff;
}
.buted button:nth-of-type(1){
  background-color: #E7685F;
}
